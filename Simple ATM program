#include <stdio.h>
int main() {
    int choice;
    float bal = 1000, amt;

    printf("1.Deposit 2.Withdraw\n");
    scanf("%d", &choice);

    if (choice == 1) {
        scanf("%f", &amt);
        bal += amt;
    } else if (choice == 2) {
        scanf("%f", &amt);
        bal -= amt;
    }
    printf("Balance = %.2f", bal);
    return 0;
}
